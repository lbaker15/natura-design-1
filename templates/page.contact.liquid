<div class="background-custom">
  <div class="">
    <div class="header-contact">
      <div class="left">
        <div style="background-image: url('{{"facemask.jpg" | asset_img_url: "600x400" }}')" ></div>
      </div> 
      <div class="right">
        <h2>Let's talk</h2>
        <h4>Don't be shy and say hi</h4>
      </div>
    </div>
    <div class="contact-section">
      <div class="contact-form2">
        {% form 'contact' %}
          <div class="row"><h2>{% if form.posted_successfully? %} Your message has been sent. Thank you for your contact {% endif %}</h2></div>
          {{ form.errors | default_errors }}
          <div class="row">
            <label for="ContactFormName">name</label>
            <input type="text" id="ContactFormName" name="contact[name]">
          </div>
          <div class="row">
            <label for="ContactFormEmail">email</label>
            <input type="email" id="ContactFormEmail" name="contact[email]">
          </div>
          <div class="row">
            <label for="ContactFormMessage">message</label>
            <textarea rows="10" id="ContactFormMessage" name="contact[body]"></textarea>
          </div>
          <div class="row">
            <input class="btn-submit" type="submit" value="send">
          </div>
        {% endform %} 
      </div>
    </div>
